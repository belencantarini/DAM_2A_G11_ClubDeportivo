<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:background="@drawable/shape_white_round_corners"
    android:padding="8dp"
    android:layout_marginTop="12dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

            <TextView
                android:id="@+id/textNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre: Juan PÃ©rez"
                android:textStyle="bold"
                android:textSize="19sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/textDNI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DNI: 12345678"
                android:textSize="17sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/textSocio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Socio"
                android:textSize="17sp"
                android:textColor="@color/black" />
        </LinearLayout>

    <LinearLayout
        android:id="@+id/contenedorBotones"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="end">

        <Button
            android:id="@+id/btnVer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ver"
            android:visibility="gone"
            android:textSize="14sp"
            android:padding="0dp"
            android:textColor="@color/white"
            android:backgroundTint="@color/sky_blue"/>

        <Button
            android:id="@+id/btnIrAPagar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ir a pagar"
            android:visibility="gone"
            android:textSize="14sp"
            android:padding="0dp"
            android:textColor="@color/white"
            android:backgroundTint="@color/green" />

        <Button
            android:id="@+id/btnDarDeBaja"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dar de baja"
            android:visibility="gone"
            android:textSize="14sp"
            android:padding="0dp"
            android:textColor="@color/white"
            android:backgroundTint="@color/red" />

        <Button
            android:id="@+id/btnVerHistorial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Historial"
            android:visibility="gone"
            android:textSize="14sp"
            android:padding="0dp"
            android:textColor="@color/white"
            android:backgroundTint="@color/teal_700" />

    </LinearLayout>
</LinearLayout>